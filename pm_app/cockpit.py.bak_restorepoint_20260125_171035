

def column_header_row():
    def cell(t):
        return html.Div(
            t,
            style={
                "display": "flex",
                "alignItems": "center",
                "justifyContent": "center",
                "textAlign": "center",
                "height": "100%",
                "width": "100%",
            },
        )

    return html.Div(
        style={
            "background": "#f3f4f6",
            "border": "1px solid #e5e7eb",
            "borderRadius": "12px",
            "display": "grid",
            "gridTemplateColumns": "56px 1.6fr 1fr 1fr 1fr 112px",
            "gap": "12px",
            "padding": "6px 0 10px 0",
            "fontSize": "11px",
            "fontWeight": 700,
            "letterSpacing": "0.12em",
            "color": "#94a3b8",
            "textTransform": "uppercase",
        },
        # IMPORTANT: '#' is the FIRST column (runner-number column)
        children=[cell("#"), cell(""), cell(""), cell(""), cell(""), cell("")],
    )


